        "@commitlint/config-conventional": "^19.7.1",
        "@tsconfig/node22": "^22.0.0",
        "@types/node": "^22.13.5",
        "conventional-changelog": "^6.0.0",
        "conventional-changelog-cli": "^5.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "tslib": "^2.8.1",
        "typescript": "^5.7.3",
        "vitest": "^3.0.6"
